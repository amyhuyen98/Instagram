<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostDetails">

    <ImageView
        android:id="@+id/ivProfileImage2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignStart="@id/ivImage2"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/instagram_user"/>

    <TextView
        android:id="@+id/tvHandle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/ivProfileImage2"
        android:layout_above="@id/ivImage2"
        android:layout_toRightOf="@id/ivProfileImage2"
        android:text="handle"/>


    <ImageView
        android:id="@+id/ivImage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/ivProfileImage2"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/tvCaption2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivImage2"
        android:layout_alignStart="@id/ivImage2"
        android:layout_margin="5dp"
        android:text="caption"/>

    <TextView
        android:id="@+id/tvTimeStamp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCaption2"
        android:layout_alignStart="@id/tvCaption2"
        android:text="timestamp"/>
</RelativeLayout>